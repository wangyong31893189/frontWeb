                <li><a href="/admin/plugin/list" data_localMenu="plugin"><i class="ico ico-plugin"></i>插件管理</a></li>
                 <% } %>

                <li><a href="/admin/user/info" data_localMenu="user"><i class="ico ico-personal"></i>个人信息</a></li>
                <li><a href="/admin/user/changePassword/<%=user.id %>" data_localMenu="password"><i class="ico ico-personal"></i>修改密码</a></li>

                <% if(user.urls['user_list']){ %>
                <li><a href="/admin/user/list" data_localMenu="userAccount"><i class="ico ico-personal"></i>用户管理</a></li>
                 <% } %>
                <% if(user.urls['authority_list']){ %>
                <li><a href="/admin/authority/list" data_localMenu="authority"><i class="ico ico-personal"></i>权限管理</a></li>
                 <% } %>
