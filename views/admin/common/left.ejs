            <div class="user">
                <div class="pic" style="border:0px solid red;border-radius:50%">
                    <% if(user.picPath && user.picPath.length>0){ %>
                        <img src="<%=user.picPath %>" width="39" height="39" style="border-radius:50%;border:2px solid #fff">
                    <% }else{ %>
                    <img src="/admin/images/pic.png" width="39" height="39" style="border-radius:50%;border:2px solid #fff">
                    <% } %>

                </div>
                <div class="right">
                    <h3><%=user.userName %></h3>
                    <p><%=user.nickName %></p>
                </div>
            </div>
            <ul class="menu-list">
                <!--class="active"-->
