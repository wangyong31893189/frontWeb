<% include ../common/commonJs %>
<script src="/admin/js/user/edit.js"></script>
<script src="/admin/js/user/validate.js"></script>
<script type="text/javascript" src="/js/My97DatePicker/WdatePicker.js"></script>
<script type="text/javascript" src="/admin/js/message.js"></script>
<script type="text/javascript" src="/js/citySelect/jquery.cityselect.js"></script>
<script src="/libs/moment/moment.js"></script>

<script type="text/javascript">
    //设置性别
    var sex=$("#sex").val();
    if(sex==0){
        $("input:radio[value='0']").attr("checked",'true')
    }else {
        $("input:radio[value='1']").attr("checked",'true');
    }
    //设置城市
    $(function(){
        $("#citySelect").citySelect({
            nodata:"none",
            required:false
        });
    });

    //设置出生年月
    var birth=$("#birth").attr("data");
    //alert(birth);//Mon Nov 09 2015 00:00:00 GMT+0800 (中国标准时间)
    var date=moment(birth).format('YYYY-MM-DD');
    $("#birth").val(date);
</script>