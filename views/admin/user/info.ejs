            <h2 class="title">个人信息</h2>
            <div class="form-box">
                <form action="/admin/user/info" method="post"  id="userInfo_form" enctype='multipart/form-data' ><!--name="btnUp" -->
                    <!-- <h3>注： 带 * 为必填项</h3> -->
                    <input type="hidden" id="localMenu" value="<%=localMenu%>" name="localMenu">
                    <input type="hidden" name="userName" id="userName" value="<%= user.userName %>"/>
                    <div class="row">
                        <label class="label">昵称 :<span>*</span></label>
                        <div class="input-box"><input class="input required" type="text" name="nickName" id="nickName" value="<%= user.nickName %>" ></div>
                    </div>
                    <div class="row">
                        <label class="label">真实姓名 :<span></span></label>
                        <div class="input-box"><input class="input" type="text" name="realName" id="realName" value="<%= user.realName %>" ></div>
                    </div>
                    <div class="row">
                        <label class="label">邮箱:<span></span></label>
                        <div class="input-box"><input class="input" type="text" name="email" id="email" value="<%= user.email %>" ></div>
                    </div>

                    <div class="row">
                        <label class="label">头像:<span></span></label>
                        <div class="input-box">
                            <% if(user.picPath && user.picPath.length>0){ %>
                            <img src="<%-user.picPath %>" width="50" height="50">
                            <% }else{ %>
                            <img src="/admin/images/pic.png" width="50" height="50">
                            <% } %>

                            <span class="preview">预览：50X50像素</span>
                            <!--<img src="public/files/-6xB2ytqbtnZZeft2YMaWlsL.jpg" >-->
                           <input class="input" type="hidden" name="picPath" id="picPath" >
                            <!--<form action="/admin/user/uploading" method="post" enctype='multipart/form-data' >-->
                            <input  type="file" name="inputFile"  multiple='mutiple' >  <!-- id="picPath"-->
                            <!--<input   name="btnUp"   type='submit' value='上传'>-->
                            <!--</form>-->

                        </div>
                    </div>
                    <!--<div class="row">-->
                        <!--<label class="label">密码:<span>*</span></label>-->
                        <!--<div class="input-box">-->
                            <!--<input class="input" type="text" name="password" id="password"  value="<%= user.password %>" >-->

                        <!--</div>-->
                    <!--</div>-->

                    <!--<div class="row">-->
                        <!--<label class="label">重复密码:<span>*</span></label>-->
                        <!--<div class="input-box">-->
                            <!--<input class="input" type="text" name="repassword" id="repassword" >-->
                        <!--</div>-->
                    <!--</div>-->

                    <div class="row">
                        <label class="label">用户简介:<span></span></label>
                        <div class="input-box">
                            <textarea id="userDesc" name="userDesc" style="width:100%;" rows="10"><%= user.userDesc %> </textarea>

                        </div>
                    </div>

                    <div class="row">
                        <label class="label">出生年月:<span></span></label>
                        <div class="input-box">
                            <input class="input Wdate" type="text" name="birth" id="birth" autocomplete="off"  onClick="WdatePicker({lang:'zh-cn',dateFmt:'yyyy-MM-dd'})"  placeholder="yyyy-MM-dd" style="width:25%" value="<%= user.birth||(user.birth&&user.birth.replace(/([0-9]{4})([0-9]{2})([0-9]{2})/,'$1-$2-$3')) %>">

                        </div>
                    </div>

                    <div class="row">
                        <label class="label">性别:<span></span></label>
                        <div class="input-box">
                            <input type="hidden" id="sex" value="<%= user.sex %>">
                            <input class="input111" type="radio"  name="sex" value="0" > 男
                            <input class="input111" type="radio" name="sex" value="1"  > 女

                        </div>
                    </div>

                    <div class="row">
                        <label class="label">所在地区:<span></span></label>
                        <div class="input-box">
                            <div id="citySelect">
                                <div class="addr-box"><select class="prov category-btn"  id="province" name="province" data-val="<%= user.province %>"></select><i class="ico ico-type-down"></i></div>
                                <div class="addr-box"><select class="city category-btn" disabled="disabled" id="city" name="city"  data-val="<%= user.city %>"></select><i class="ico ico-type-down"></i></div>
                                <div class="addr-box"><select class="dist category-btn" disabled="disabled" id="district" name="district"  data-val="<%= user.district %>"></select><i class="ico ico-type-down"></i></div>
                            </div>


                        </div>
                    </div>
                    <div class="row">
                        <label class="label">详细地址:<span></span></label>
                        <div class="input-box">
                            <input class="input" type="text" name="address" id="address" value="<%= user.address %>" />
                        </div>
                    </div>



                    <div class="row row-btn">
                        <div class="text-center">
                            <!--<input   name="btnUp"   type='submit' value='上传'>-->
                            <button class="save-btn active"    type="submit" >保存</button> <!--id="submit_btn"-->
