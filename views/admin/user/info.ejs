    //设置性别
    var sex=$("#sex").val();
    if(sex==0){
        $("input:radio[value='0']").attr("checked",'true')
    }else {
        $("input:radio[value='1']").attr("checked",'true');
    }
   //设置城市
    $(function(){
        $("#citySelect").citySelect({
            nodata:"none",
            required:false
        });
    });

</script>


