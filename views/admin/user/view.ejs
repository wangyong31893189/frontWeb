<% include ../common/header %>

<section class="content">
    <div class="left-box">
        <% include ../common/left %>
        <!--<ul class="menu-list">-->
        <!--<li><a href="/admin/category/list"><i class="ico ico-index"></i>我的首页</a></li>-->
        <!--<li><a href="/admin/category/list"><i class="ico ico-article"></i>文章管理</a></li>-->
